generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  RM
}

enum ContactChannel {
  CONTACT_FORM
  TRUNKLINE
  INFO_EMAIL
  SALES_EMAIL
  OTHER
}

enum LeadStatus {
  NEW
  QUALIFIED
  CONTACTED
  OPPORTUNITY
  CLOSED
}

enum SourceType {
  GOOGLE_PLACES_DISCOVERY
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String
  role          Role      @default(RM)
  accounts      Account[]
  sessions      Session[]
  leads         Lead[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Lead {
  id                   String         @id @default(uuid())
  assignedToId         String
  assignedTo           User           @relation(fields: [assignedToId], references: [id])
  companyName          String
  websiteUrl           String?
  contactChannel       ContactChannel
  contactValue         String
  industry             String?
  cityProvince         String?
  notes                String?
  status               LeadStatus     @default(NEW)
  sourceType           SourceType
  sourcePlaceId        String
  sourceGoogleMapsUrl  String?
  sourceDiscoveredAt   DateTime
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  @@index([assignedToId])
  @@index([status])
  @@index([cityProvince])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
